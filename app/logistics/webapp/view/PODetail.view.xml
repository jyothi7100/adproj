<mvc:View controllerName="logistics.controller.PODetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">

<Page id="poDetailPage" showHeader="true" >

<customHeader>
      <Bar id="_IDGenBar">
        <contentLeft>
          <Title id="_IDGenTitle" text="Purchase Order" level="H2" />
           <ObjectIdentifier id="_IDGenObjectIdentifier" title="{OrderNo}" />
          
        </contentLeft>
        
      </Bar>
    </customHeader>
    <IconTabBar id="poTabs" selectedKey="details">
      <items>
        <IconTabFilter id="_IDGenIconTabFilter6" key="details" text="Details" icon="sap-icon://hint">
          <VBox id="_IDGenVBox1">
            <Text id="_IDGenText15" text="PO Details for {OrderNo}" />
             <sap.ui.layout.form:SimpleForm
        editable="false"
        layout="ResponsiveGridLayout"
        xmlns:sap.ui.layout.form="sap.ui.layout.form"
        class="sapUiSmallMarginTop">

        <Label text="Supplier" />
        <Text text="{Supplier}" />

        <Label text="Region" />
        <Text text="{Region}" />

        <Label text="Plant" />
        <Text text="{= ${Plant} + ' (' + ${PlantCode} + ')' }" />

        <Label text="Plant Location" />
        <Text text="{PlantLocation}" />

        <Label text="Department" />
        <Text text="{Department}" />

        <Label text="Company Code" />
        <Text text="{CompanyCode}" />

        <Label text="Supplier Location" />
        <Text text="{SupplierLocation}" />

        <Label text="IncoTerms" />
        <Text text="{IncoTerms}" />

        <Label text="Created On" />
        <Text text="{path: 'CreatedOn', formatter: '.formatter.formatDate'}" />

        <Label text="Freight Vendor" />
        <Text text="{FreightVendor}" />

        <Label text="Order Type" />
        <Text text="{OrderType}" />

        <Label text="Status" />
        <Text text="{Status}" />
      </sap.ui.layout.form:SimpleForm>
          </VBox>
        </IconTabFilter>

        <IconTabFilter id="_IDGenIconTabFilter7" key="receiving" text="Receiving" icon="sap-icon://shipping-status">
          <VBox id="_IDGenVBox7">
            <VBox>
    <Table
      id="receivingTable"
      items="{ path: 'Receivings' }"
      growing="true"
      growingScrollToLoad="true"
      width="100%">
      <columns>
        <Column><Text text="Receiving Number" /></Column>
        <Column><Text text="OrderNo" /></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Link id="link1" text="{path: 'ReceivingNumber', targetType: 'any'}" press=".onReceivingPress" />
           
            <Text text="{path: 'parent/OrderNo', targetType: 'any'}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </VBox>
          </VBox>
        </IconTabFilter>

        <IconTabFilter id="_IDGenIconTabFilter8" key="lines" text="Lines" icon="sap-icon://product">
         <VBox>
    <Table
      id="lineItemsTable"
      items="{ path: 'Items' }"
      growing="true"
      growingScrollToLoad="true"
      width="100%">
      <columns>
        <Column><Text text="Item" /></Column>
        <Column><Text text="Material" /></Column>
        <Column><Text text="Description" /></Column>
        <Column><Text text="Quantity" /></Column>
        <Column><Text text="UoM" /></Column>
        <Column><Text text="Delivery Date" /></Column>
      </columns>
      <items>
        <ColumnListItem>
          <cells>
            <Text text="{Item}" />
            <Text text="{Material}" />
            <Text text="{Description}" />
            <Text text="{QuantityOrdered}" />
           <Text text="{UoM}" />
            <Text text="{DeliveryDate}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </VBox>
          
        </IconTabFilter>

        <IconTabFilter id="_IDGenIconTabFilter9" key="documents" text="Documents" icon="sap-icon://attachment">
          <VBox id="_IDGenVBox9">
            <Text id="_IDGenText18" text="Documents for {OrderNo}" />
            <!-- List of attachments or links -->
          </VBox>
        </IconTabFilter>
      </items>
    </IconTabBar>
  </Page>
</mvc:View>
